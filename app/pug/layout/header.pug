header.header
  .container.header__content
      button.header-navbar__toggle
        +icon('icon-menu')

      .header-logo
        a(href='/')
          img(src=URL_file('logo', baseUrlLvl, 'svg'), alt="Zap Hub logotype")

      .header-navbar
        //- .header__nav
        nav.navigation.mr-lg-auto
          include ../components/navigation

        //- .header-utility
        //-   .header-utility__item
        a.button.button__secondary.button--icon.button--small(href=URL_Pug_MainNav('index')) #[+icon('icon-add', 'button__icon')]Додати оголошення

          //- .header-utility__item
        a(href="#").header-widhlist.ml-lg-medium #[+icon('icon-heart-solid')]
          //- | Збережені оголошення
        
        ul.language.h-hidden-lg-up
          include ../components/language

          //- .header-utility__item
      .header-account.dropdown.ml-lg-medium
        a.header-account__link.dropdown__head(href="#")
          +icon('icon-user')
        ul.dropdown__list.h-hidden-md-down
          li.dropdown__item
            a(href="#").dropdown__link Акаунт
          li.dropdown__item
            a(href="#").dropdown__link Панель керування
          li.dropdown__item
            a(href="#").dropdown__link Налаштування
          li.dropdown__item
            a(href="#").dropdown__link.mutted #[+icon('icon-exit', 'dropdown__icon')]Вийти

        //- .header-utility__item
      ul.language.ml-medium.h-hidden-md-down
        include ../components/language
