include ../components/tags
include ../components/wishlist-cta

.row
  each product in productTole
    .col-lg-3.product-tile__col
      .product-tile
        a(href=product.link).product-tile__link
        .product-tile__image
          img(src=URL_file(product.image, baseUrlLvl, 'jpg'), alt="image").product-tile__img__
        h3.h3.product-tile__name=product.name
        +tags('mt-2')
        .product-tile__price 220 грн
        .product-tile__info
          .product-tile__location #[+icon('icon-location')] Київ
          time.product-tile__date 24.05.2020
          +wishlistCta('ml-auto')
