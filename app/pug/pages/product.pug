extends ../base/main

block variables
  - var pageTitle = 'Product'
  - var pageMainClass = 'product'

block styles

block content
  .container
    .d-flex.align-items-center.justify-content-between.justify-content-lg-start.mb-2.mb-lg-4
      a(href='/').button.button__simple.button--icon.button--small.mr-4.h-hidden-md-down #[+icon('icon-chevron-left')] Назад
      a(href='/').button.button__link.mr-2.h-hidden-lg-up #[+icon('icon-arrow-left')]
      include ../components/breadcrumbs
  
    .row
      .col-md-8
        include ../components/product/product-image
        .h-block.h-hidden-md-up
          include ../components/product/product-author
        include ../components/product/product-info
        
      .col-md-4
        .h-block.h-hidden-xs-down
          include ../components/product/product-author
