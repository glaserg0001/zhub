extends ../base/main

block variables
  - var pageTitle = 'Styleguide'
  //- - var pageMainClass = 'test'
  //- - var baseUrlLvl = 1

block styles
  link(rel='stylesheet' href= URL_file('pages/styleguide', baseUrlLvl))

block content
  .container.sg-container
    h1.sg-heading Styleguide
    //- COLOR START
    h2.sg-heading Colors
    -
      var grayColors = [
        {
          'blue-500': '#2f4858',
          'blue-400': '#406a85',
          'blue-300': '#537992',
          'blue-200': '#75aed6',
          'blue-100': '#dceaf3'
        },
        {
          'green-400': '#486c0c',
          'green-300': '#6fa21a',
          'green-200': '#8dc334',
          'green-100': '#cee8a3',
        },
        {
          'gray-500': '#949597',
          'gray-400': '#d4d5d6',
          'gray-300': '#dadada',
          'gray-200': '#ededed',
          'gray-100': '#f5f5f5',
        }
      ]

    each item in grayColors
      ul.sg-palette
        each val, key in item
          li(style=`background: ${val};` data-name=key data-value=val)
    //- COLOR START

    //- HEADING START
    h2.sg-heading Heading
    .sg-block
      h1 Heading 1
      h2 Heading 2
      h3 Heading 3
      h4 Heading 4
    //- HEADING END

    h2.sg-heading Forms
    h3.sg-heading Input
    //- FORM START
    -
      var inputFields = {
        input1: {
          label: 'Name',
          value: 'Mike',
          disabled: false
        },
        input2: {
          label: 'Surname',
          value: '',
          disabled: true
        },
      }

    each val, key in inputFields
      div(class='form-input ' + (val.label ? 'm-label' : ''))
        input(type='text' value=val.value class=val.label ? 'js-form-input' : '')
        label=val.label
    //- FORM END

    //- BUTTON START
    h2.sg-heading Buttons
    h3.sg-heading Primary

    .row
      .col-md-4
        .sg-block
          .sg-block__list
            a.button.button__primary(href='#') Додати оголошення
          .sg-block__list
            button.button.button__primary(href='#') Додати оголошення

    h4.sg-heading Default
    h4.sg-heading Hover
    h4.sg-heading Loading
    h4.sg-heading Focused
    h4.sg-heading Unable
    h3.sg-heading Secondary
    //- BUTTON END

    //- ICONS START

    h2.sg-heading Icons
    -
      var iconsSVG = [
        'icon-heart-solid',
        'icon-user',
        'icon-exit',
        'icon-menu',
      ]
    if iconsSVG
      ul.sg-icons__list
        each val in iconsSVG
          li.sg-icons__item(data-name=val)
            +iconSvg(val)
    //- ICONS END


